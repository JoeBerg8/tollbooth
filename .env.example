# Dry Run Configuration
DRY_RUN=TRUE

# Database Configuration
DATABASE_URL=jdbc:postgresql://db:5432/inboxtoll
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=inboxtoll
DATABASE_PORT=5432

# Gmail Configuration (REQUIRED)
# Get these from Google Cloud Console - see README for setup instructions
# This should be a single-line JSON string from your OAuth 2.0 credentials
GMAIL_CREDENTIALS_JSON={"web":{"client_id":"YOUR_CLIENT_ID.apps.googleusercontent.com","project_id":"your-project-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_secret":"YOUR_CLIENT_SECRET","redirect_uris":["http://localhost:8888/Callback"]}}
GMAIL_EMAIL=your-email@gmail.com

# Stripe Configuration (REQUIRED)
# Get these from Stripe Dashboard > Developers
STRIPE_API_KEY=sk_test_51AbCdEfGhIjKlMnOpQrStUvWxYz1234567890
STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdefghijklmnopqrstuvwxyz

# Stripe Checkout URLs (REQUIRED)
# URLs to redirect senders after payment
TOLL_SUCCESS_URL=https://example.com/success
TOLL_CANCEL_URL=https://example.com/cancel

# Toll Configuration (Optional - defaults provided)
# Amount to charge senders in dollars
TOLL_AMOUNT=0.25

# Comma-separated list of domains exempt from toll
TRUSTED_DOMAINS=mycompany.com,partner.org

# How often to poll Gmail for new emails (in seconds)
POLL_INTERVAL_SECONDS=60

# Email Template Configuration (Optional)
# Subject line for payment request emails
TOLL_EMAIL_SUBJECT=Payment required to reach my inbox

# Body template for payment request emails (HTML supported)
# Available placeholders: {tollAmount}, {paymentLink}, {senderEmail}
TOLL_EMAIL_BODY=<p>Hi,</p><p>A ${tollAmount} fee is required to deliver your message to my inbox.</p><p><a href="{paymentLink}">Click here to pay</a></p>

# Display name for sent emails (optional)
TOLL_EMAIL_FROM_NAME=Inbox Toll

# Application Port (Optional)
PORT=8080
